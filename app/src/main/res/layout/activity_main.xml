<?xml version="1.0" encoding="utf-8"?>
<!-- องค์ประกอบหลักของเลย์เอาต์ เป็น ConstraintLayout เพื่อจัดเรียงองค์ประกอบต่างๆ ได้อย่างยืดหยุ่น -->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- ImageView สำหรับแสดงภาพพื้นหลังที่พร่ามัวและมีความโปร่งใส -->
    <ImageView
        android:id="@+id/background_image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:background="@drawable/pink_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />

    <!-- LinearLayout สำหรับจัดเรียงองค์ประกอบในแนวตั้งที่กึ่งกลางหน้าจอ -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- CardView สำหรับสร้างวงกลมที่มีเงาซ้อนกัน -->
        <androidx.cardview.widget.CardView
            android:layout_width="220dp"
            android:layout_height="220dp"
            android:layout_marginBottom="32dp"
            app:cardCornerRadius="100dp"
            app:cardElevation="9dp"
            app:cardBackgroundColor="#66FFFFFF">

            <!-- ImageView สำหรับแสดงรูปภาพแก้วชานม -->
            <ImageView
                android:layout_width="224dp"
                android:layout_height="224dp"
                android:layout_margin="0dp"
                android:scaleType="fitCenter"
                android:src="@drawable/logo_nono"
                tools:ignore="ContentDescription" />

        </androidx.cardview.widget.CardView>

        <!-- TextView สำหรับชื่อร้านภาษาไทย -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ร้านโนโน่_ชานมไข่มุก"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:layout_marginBottom="8dp"/>

        <!-- TextView สำหรับชื่อร้านภาษาอังกฤษ -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nono_bubble_tea_shop"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:letterSpacing="0.1"/>

        <!-- ปุ่มสำหรับเข้าสู่ระบบ -->
        <Button
            android:id="@+id/login_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:text="@string/เข้าสู่ระบบ"
            android:textColor="#000000"
            android:backgroundTint="#FFB6C1"
            android:paddingStart="48dp"
            android:paddingEnd="48dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:stateListAnimator="@null"
            android:elevation="8dp"/>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
